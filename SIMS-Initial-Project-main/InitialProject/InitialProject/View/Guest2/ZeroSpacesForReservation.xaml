<Window x:Class="InitialProject.View.Guest2.ZeroSpacesForReservation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View.Guest2"
        mc:Ignorable="d"
        Title="ZeroSpacesForReservation" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="There are no spaces available for chosen tour. Would you like to register another one in the same city?"
                   Margin="10"
                   FontSize="20"/>
            
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="Save" Margin="0 0 10 0" Command="{Binding SaveCommand}" Click="SaveButton_Click" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
