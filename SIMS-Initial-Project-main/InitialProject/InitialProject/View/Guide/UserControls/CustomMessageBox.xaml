<UserControl x:Class="InitialProject.View.Guide.UserControls.CustomMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InitialProject.View.Guide.UserControls"
             mc:Ignorable="d" 
             Width="121" Height="52"
             Background="Transparent">
    <Border BorderThickness="0" CornerRadius="20" Background="Transparent">
        <Grid Background="Transparent">
            <Path Data="M110,0 L20,0 A10,10 0 0 0 10,10 L10,15 L0,25 L10,35 L10,40 A10,10 0 0 0 20,50 L110,50 A10,10 0 0 0 120,40 L120,10 A10,10 0 0 0 110,0 Z" Fill="#FFA500" Stroke="#F4F4F4" StrokeThickness="1"/>
            <StackPanel Orientation="Vertical">
                <Image Source="/Resources/Images/warning.png" Width="15" Height="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,8,0,0"/>
                <TextBlock x:Name="MessageText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                <TextBlock x:Name="MessageTextAdditional" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
