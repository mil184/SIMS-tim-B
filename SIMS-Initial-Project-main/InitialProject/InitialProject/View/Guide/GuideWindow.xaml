<Window x:Class="InitialProject.View.Guide.GuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View.Guide"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="DMJM-Tours" Height="600" Width="800"
        Icon ="/Resources/Images/favicon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- User information section -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="aUTO"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Resources/Images/tour-guide.png" Width="100" Height="75" Margin="0 0 10 0" />
            <StackPanel Grid.Column="1">
                <TextBlock FontSize="18" FontWeight="Bold" Text="Tour Guide" Margin="0 0 0 10"/>
                <TextBlock FontSize="14" Text="{Binding CurrentUser.Username, FallbackValue=BidningNotWorking}"/>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Image Source="/Resources/Images/info.png" Width="20" Height="20" Margin="0 0 5 0"/>
                    <TextBlock Text="To start a tour, double click on one of today's tours" Margin="0" FontSize="14" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <!-- Tabs section -->
 <TabControl Grid.Row="1">
            <!-- Tours tab -->
            <TabItem Header="Tours">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock FontSize="18" FontWeight="Bold" Text="Tours"/>
                        <Button Click="CreateButton_Click" Width="80" Content="Create" Margin="10 0 0 0"/>
                        <Button Width="80" Content="Delete" Margin="10 0 0 0"/>
                        <Button Width="80" Content="Edit" Margin="10 0 0 0"/>
                    </StackPanel>
                    <!-- Current tour section -->
                    <GroupBox Header="Today's tours">
                        <StackPanel Margin="0 10 0 0">
                            <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                                <DataGrid ItemsSource="{Binding CurrentTours}" SelectedItem="{Binding Path= SelectedDTO}" AutoGenerateColumns="False" Name="CurrentToursDataGrid" IsReadOnly="true" MouseDoubleClick="CurrentToursDataGrid_MouseDoubleClick">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="*"/>
                                        <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*"/>
                                        <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="*"/>
                                        <DataGridTextColumn Header="" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </StackPanel>
                    </GroupBox>
                    <!-- Upcoming tours section -->
                    <GroupBox Header="Upcoming Tours">
                        <StackPanel Margin="0 10 0 0">
                            <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                                <DataGrid ItemsSource="{Binding UpcomingTours}" AutoGenerateColumns="False" IsReadOnly="true">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="*"/>
                                        <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*"/>
                                        <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="*"/>
                                        <DataGridTextColumn Header="" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </TabItem>

            <!-- Statistics tab -->
            <TabItem Header="Statistics">
                <StackPanel Margin="10">
                    <!-- Statistic section -->
                    <TextBlock FontSize="18" FontWeight="Bold" Text="Statistics" Margin="0 0 10 0"/>
                    <!-- Add statistic elements here -->
                </StackPanel>
            </TabItem>
            <!-- Ratings tab -->
            <TabItem Header="Ratings">
                <StackPanel Margin="10">
                    <!-- Rating section -->
                    <TextBlock FontSize="18" FontWeight="Bold" Text="Ratings" Margin="0 0 10 0"/>
                    <!-- Add rating elements here -->
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
