<Window x:Class="InitialProject.View.Guide.GuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View.Guide"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="GuideWindow" Height="600" Width="800">
    <Window.Resources>
        <local:LocationIdToCountryConverter x:Key="LocationIdToCountryConverter"/>
        <local:LocationIdToCityConverter x:Key="LocationIdToCityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- User information section -->
        <StackPanel Grid.Row="0" Margin="10" Orientation="Horizontal">
            <Image Source="/Resources/Images/tour-guide.png" Width="100" Height="75" Margin="0 0 10 0" />
            <StackPanel>
                <TextBlock FontSize="18" FontWeight="Bold" Text="Tour Guide" Margin="0 0 0 10"/>
                <TextBlock FontSize="14" Text="{Binding LoggedInUser.Username, FallbackValue=BidningNotWorking}"/>
            </StackPanel>
        </StackPanel>
        <!-- Tabs section -->
 <TabControl Grid.Row="1">
            <!-- Tours tab -->
            <TabItem Header="Tours">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock FontSize="18" FontWeight="Bold" Text="Tours"/>
                        <Button Click="CreateButton_Click" Width="80" Content="Create" Margin="10 0 0 0"/>
                        <Button Width="80" Content="Delete" Margin="10 0 0 0"/>
                        <Button Width="80" Content="Edit" Margin="10 0 0 0"/>
                    </StackPanel>
                    <!-- Current tour section -->
                    <GroupBox Header="Today's tours">
                        <StackPanel Margin="0 10 0 0">
                            <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                                <ListBox ItemsSource="{Binding CurrentTours}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock FontWeight="Bold" Text="{Binding Name}"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding LocationId, Converter={StaticResource LocationIdToCountryConverter}}"/>
                                                    <TextBlock Text=", "/>
                                                    <TextBlock Text="{Binding LocationId, Converter={StaticResource LocationIdToCityConverter}}"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding StartTime}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </StackPanel>
                    </GroupBox>
                    <!-- Upcoming tours section -->
                    <GroupBox Header="Upcoming Tours">
                        <StackPanel Margin="0 10 0 0">
                            <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                                <ListBox ItemsSource="{Binding UpcomingTours}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock FontWeight="Bold" Text="{Binding Name}"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding LocationId, Converter={StaticResource LocationIdToCountryConverter}}"/>
                                                    <TextBlock Text=", "/>
                                                    <TextBlock Text="{Binding LocationId, Converter={StaticResource LocationIdToCityConverter}}"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding StartTime}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>

            <!-- Statistics tab -->
            <TabItem Header="Statistics">
                <StackPanel Margin="10">
                    <!-- Statistic section -->
                    <TextBlock FontSize="18" FontWeight="Bold" Text="Statistics" Margin="0 0 10 0"/>
                    <!-- Add statistic elements here -->
                </StackPanel>
            </TabItem>
            <!-- Ratings tab -->
            <TabItem Header="Ratings">
                <StackPanel Margin="10">
                    <!-- Rating section -->
                    <TextBlock FontSize="18" FontWeight="Bold" Text="Ratings" Margin="0 0 10 0"/>
                    <!-- Add rating elements here -->
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
